# Discord Bot Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ============================================
# REQUIRED SETTINGS
# ============================================

# Your Discord Bot Token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord Server (Guild) ID
# Right-click your server → Server Settings → Widget → Enable Server Widget → Copy Server ID
GUILD_ID=your_guild_id_here

# ============================================
# OPTIONAL: Channel IDs
# Set to 0 if you don't use a particular feature
# ============================================

COUNCIL_LOG_CHANNEL_ID=0
SUBMISSIONS_CHANNEL_ID=0
HIATUS_CHANNEL_ID=0
CHARACTER_BACKSTORIES_CHANNEL_ID=0
NPC_BACKSTORIES_CHANNEL_ID=0
CHARACTER_GRAVEYARD_CHANNEL_ID=0
ENCYCLOPEDIA_CHANNEL_ID=0
RESOURCES_CHANNEL_ID=0
HELP_CHANNEL_ID=0

# ============================================
# OPTIONAL: Google Sheets Integration
# ============================================

# Google Sheet ID (if using Google Sheets features)
# Found in the URL: https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit
GOOGLE_SHEET_ID=

# Legacy Google Apps Script (if still using)
WEBHOOK_URL=
GSCRIPT_SECRET=

# ============================================
# OPTIONAL: OpenAI / AI Features
# ============================================

# OpenAI API Key (required for AI/RAG features)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model to use
OPENAI_MODEL=gpt-5-nano-2025-08-07

# ChromaDB path (for vector database)
CHROMA_DB_PATH=./data/chroma_db

# ============================================
# OPTIONAL: Feature Settings
# ============================================

# Submission window in seconds (default: 900 = 15 minutes)
SUBMISSION_WINDOW_SECONDS=900

# Hiatus DM settings
HIATUS_DM_HOUR=10
TZ_OFFSET_HOURS=-4

# MIA (Missing In Action) settings
MIA_STATE_FILE=data/mia_state.json
MIA_INACTIVE_DAYS=30
MIA_LONG_INACTIVE_DAYS=180
MIA_MESSAGES_TO_CLEAR=5
MIA_CHECK_HOUR=9

# Role IDs
HIGH_COUNCIL_ROLE_ID=0

# Border settings
BORDER_STATE_FILE=data/border_state.json
BORDER_CHECK_INTERVAL_MIN=15

# Indexing settings (for RAG/AI features)
INDEX_DELAY_SECONDS=2.0
EMBEDDING_BATCH_SIZE=50
EMBEDDING_DELAY_SECONDS=0.1

# Roleplay AI settings
ROLEPLAY_MAX_TOKENS=4000
ROLEPLAY_CONTEXT_LIMIT=10

